@model IEnumerable<TallerMecanico.Models.Repuesto>

<div class="span9">
    <div class="page-header">
        <h1>Listar Repuestos</h1>
    </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        <tbody>
            @foreach (var repuesto in Model)
            {
            <tr>
                <td>@repuesto.Id</td>
                <td>@repuesto.Nombre</td>
                <td>@repuesto.Precio</td>
                <td>@repuesto.Stock</td>
                <td>
                    <a href="@Url.Action("Ver", "Repuestos", new { id = repuesto.Id })">Ver</a>
                    | <a href="@Url.Action("Edit","Repuestos", new { id = repuesto.Id})">Editar</a>
                    | <a href="">Automoviles</a>  @*@Url.Action("Auto","Repuestos", new { id = repuesto.Id})*@
                </td>

            </tr>
            }
        </tbody>
    </table>
    <p class="table-result-count">Se han encontrado @Model.Count() resultado(s).</p>
</div>