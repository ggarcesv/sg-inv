@model TallerMecanico.Models.Repuesto

@Html.ValidationSummary()

<div class="span9">
    <div class="page-header">
        <h1>Registrar Repuesto</h1>
    </div>
    <form method="POST" class="form-horizontal" action="@Url.Action("Create","Repuestos")">

            <fieldset>
                <div class="control-group">
                    <label class="control-label">Nombre:</label>
                    <div class="controls">
                        <input class="input-xlarge" name="Nombre" type="text" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Precio:</label>
                    <div class="controls">
                        <input class="input-xlarge" name="Precio" type="text" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Stock:</label>
                    <div class="controls">
                        <input class="input-xlarge" name="Stock" type="text" value="">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </fieldset>
        </form>
</div>
