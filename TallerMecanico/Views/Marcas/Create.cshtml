@model TallerMecanico.Models.Marca

@Html.ValidationSummary()

<div class="span9">
    <div class="page-header">
        <h1>Registrar Marca</h1>
    </div>

    <form method="POST" class="form-horizontal" action="@Url.Action("Create","Marcas")">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">Nombre:</label>
                    <div class="controls">
                        <input class="input-xlarge" name="Nombre" type="text" value="">
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </fieldset>
        </form>
</div>