@model IEnumerable<TallerMecanico.Models.Marca>
<div class="span9">
    <div class="page-header">
        <h1>Listar Marcas</h1>
    </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                @*<th>Automóviles</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var marca in Model)
            {
                <tr>
                    <td>@marca.Id</td>
                    <td>@marca.Nombre</td>
                    <td>
                        <a href="@Url.Action("View", "Marca", new { id = marca.Id })">Ver</a>
                        | <a href="@Url.Action("edit","Marca", new { id = marca.Id})">Editar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <p class="table-result-count">Se han encontrado @Model.Count() resultado(s).</p>
</div>