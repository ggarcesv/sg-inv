@model IEnumerable<TallerMecanico.Models.Automovil>

<div class="span9">
    <div class="page-header">
        <h1>Listar automóviles</h1>
    </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Patente</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Color</th>
                <th>Año</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var automovil in Model)
            {
            <tr>
                
                <td>@automovil.Id</td>
                <td>@automovil.Patente</td>
                <td>@automovil.Marca.Nombre</td>
                <td>@automovil.Modelo</td>
                <td>@automovil.Color</td>
                <td>@automovil.Anio</td>
                <td>
                    <a href="@Url.Action("Ver","Automoviles", new { id = automovil.Id})">Ver</a>
                    | <a href="@Url.Action("Edit","Automoviles", new { id = automovil.Id})">Editar</a>
                </td>

            </tr>

            }
        </tbody>
    </table>
    <p class="table-result-count">Se han encontrado @Model.Count() resultado(s).</p>
</div>
