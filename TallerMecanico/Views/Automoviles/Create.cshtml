@model TallerMecanico.Models.Automovil

@Html.ValidationSummary()

<div class="span9">
    <div class="page-header">
        <h1>Registrar Automovil</h1>
    </div>

    <form method="POST" class="producto form-horizontal" action="@Url.Action("Create","Automoviles")">
        <fieldset>
            <div class="control-group">
                <label class="control-label">Patente:</label>
                <div class="controls">
                    <input class="input-xlarge" name="Patente" type="text" value="@Model.Patente">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Marca:</label>
                <div class="controls">
                    <select class="input-xlarge">
                        <option value="1">Chevrolet</option>
                        <option value="2">Toyota</option>
                        <option value="3">Tesla Motors</option>
                        <option value="4">Ford</option>
                    </select>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Modelo:</label>
                <div class="controls">
                    <input class="input-xlarge" name="Modelo" type="text" value="@Model.Modelo">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Color:</label>
                <div class="controls">
                    <input class="input-xlarge" name="Color" type="text" value="@Model.Color">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Año:</label>
                <div class="controls">
                    <input class="input-xlarge" name="Anio" type="text" value="@Model.Anio">
                </div>
            </div>
           
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>

        </fieldset>
    </form>
</div>